<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/ovchip</property>
        <property name="hibernate.connection.username">ov</property>
        <property name="hibernate.connection.password">ov</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">false</property>

        <mapping class="ovchip_hibernate.domein.Adres"/>
        <mapping class="ovchip_hibernate.domein.OVChipKaart"/>
        <mapping class="ovchip_hibernate.domein.Product"/>
        <mapping class="ovchip_hibernate.domein.Reiziger"/>

    </session-factory>

</hibernate-configuration>